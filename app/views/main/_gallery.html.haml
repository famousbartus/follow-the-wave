.container

  .gallery{:class => type}
    %a.prev_button.prev.browse.right

    .scrollable
      .items
        - if pictures.present?
          - number = (pictures.size/4)+1
          - i = 0
          - number.times do
            %div
              - pictures[i..i+3].each do |picture|
                = link_to_remote image_tag(picture.image.url(type)), {:url => {:action => :image, :id => picture.id, :method => :get}}
            - i = i+4

    %a.next_button.next.browse.left
