.container

  .gallery
    %a.prev_button.prev.browse.right

    .scrollable
      .items
        - number = pictures.size/5 + 1
        - i = 0
        - number.times do
          %div
            - pictures[i..i+4].each do |picture|
              = link_to_remote image_tag(picture.image.url), {:url => {:action => :image, :id => picture.id, :method => :get}}
          - i = i+5

    %a.next_button.next.browse.left
