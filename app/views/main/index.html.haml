      fam_slide('#threeds', false);
    });

  });

  $(".gallery img").hover(function() {
    $(this).css({'z-index' : '10'}); /*Add a higher z-index value so this image stays on top*/ 
    $(this).addClass("hover").stop() /* Add class of "hover", then stop animation queue buildup*/
    .animate({
      marginTop: '5px', /* The next 4 lines will vertically align this image */ 
      marginLeft: '3px',
      top: '30%',
      left: '30%',
      width: '140px', /* Set new width */
      height: '140px', /* Set new height */
      padding: '5px'
    }, 200); /* this value of "200" is the speed of how fast/slow this hover animates */
  } , function() {
    $(this).css({'z-index' : '0'}); /* Set z-index back to 0 */
    $(this).removeClass("hover").stop()  /* Remove the "hover" class , then stop animation queue buildup*/
    .animate({
      marginTop: '25', /* Set alignment back to default */
      marginLeft: '20',
      width: '110px', /* Set width back to default */
      height: '110px', /* Set height back to default */
      padding: '0px'
    }, 400);
  });

  // execute your scripts when the DOM is ready. this is mostly a good habit
  $(function() {
    // initialize scrollable
    $(".scrollable").scrollable();
  });
