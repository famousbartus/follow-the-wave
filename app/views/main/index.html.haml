  $(document).ready(function(){
    $('#about .clickable_top').hover(
      function() {
        $('#about .clickable_top').css('background-image',"url(../images/arrow_up_black.png)");
      }, function() {
        $('#about .clickable_top').css('background-image',"url(../images/arrow_up.png)");
      }
    );

